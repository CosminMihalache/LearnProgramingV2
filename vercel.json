{
  "version": 2,
  "buildCommand": "cd client && npm install && npm run build",
  "outputDirectory": "client/build",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "https://newfolder-7mxe.onrender.com/api/$1" },
    { "source": "/uploads/(.*)", "destination": "https://newfolder-7mxe.onrender.com/uploads/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
